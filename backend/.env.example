# Finance4All Backend - Environment Variables
# Copy this file to .env and fill in the values

# ==============================================
# LOCAL DEVELOPMENT CONFIGURATION
# ==============================================
# For Docker Compose local development, use these values:
# DATABASE_URL=postgresql://finance4all_user:local_dev_password_change_in_prod@postgres:5432/finance4all
# REDIS_URL=redis://redis:6379
# FIRESTORE_EMULATOR_HOST=firestore-emulator:8080
#
# For local development WITHOUT Docker:
# DATABASE_URL=postgresql://finance4all_user:local_dev_password_change_in_prod@localhost:5432/finance4all
# REDIS_URL=redis://localhost:6379
# FIRESTORE_EMULATOR_HOST=localhost:8080
# ==============================================

# Server Configuration
NODE_ENV=development
PORT=4000

# Database Configuration (PostgreSQL)
# For local development with Docker Compose, use 'postgres' as host
# For local development without Docker, use 'localhost'
DATABASE_URL=postgresql://finance4all_user:local_dev_password_change_in_prod@localhost:5432/finance4all

# Redis Configuration
# For local development with Docker Compose, use 'redis://redis:6379'
# For local development without Docker, use 'redis://localhost:6379'
REDIS_URL=redis://localhost:6379

# Firestore Emulator (Local Development Only)
# Uncomment to use Firestore emulator instead of production Firestore
# FIRESTORE_EMULATOR_HOST=localhost:8080

# Firebase Configuration
# For production, use service account credentials from Secret Manager
# For development, you can leave these empty to use Application Default Credentials
# or set up Firebase emulator (FIRESTORE_EMULATOR_HOST)
FIREBASE_PROJECT_ID=finance4all-dev
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Firebase Auth Emulator (automatically set when FIRESTORE_EMULATOR_HOST is set)
# FIREBASE_AUTH_EMULATOR_HOST=localhost:9099

# GCP Configuration
GCP_PROJECT_ID=finance4all-dev
GCP_REGION=us-central1

# Security
JWT_SECRET=local_dev_jwt_secret_CHANGE_IN_PRODUCTION
JWT_EXPIRES_IN=7d
CORS_ORIGIN=http://localhost:5173

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
