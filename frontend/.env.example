# Finance4All Frontend - Environment Variables
# Copy this file to .env.local and fill in the values

# ==============================================
# LOCAL DEVELOPMENT CONFIGURATION
# ==============================================
# For Docker Compose: VITE_BACKEND_URL=http://localhost:4000
# For standalone: VITE_BACKEND_URL=http://localhost:4000
# ==============================================

# Environment
VITE_NODE_ENV=development

# Backend API URL
VITE_BACKEND_URL=http://localhost:4000

# API Configuration
VITE_API_TIMEOUT=30000
VITE_ENABLE_API_LOGGING=true

# Firestore Emulator (Local Development Only)
# Uncomment to use Firestore emulator instead of production Firestore
# VITE_FIRESTORE_EMULATOR_HOST=localhost:8080
# VITE_USE_FIRESTORE_EMULATOR=true

# Firebase Configuration (Production)
# Uncomment and fill in when Firebase is set up
# VITE_FIREBASE_API_KEY=
# VITE_FIREBASE_AUTH_DOMAIN=finance4all-dev.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=finance4all-dev
# VITE_FIREBASE_STORAGE_BUCKET=finance4all-dev.appspot.com
# VITE_FIREBASE_MESSAGING_SENDER_ID=
# VITE_FIREBASE_APP_ID=

# Feature Flags (for future use)
# VITE_ENABLE_ANALYTICS=false
# VITE_ENABLE_SENTRY=false
# VITE_ENABLE_DEBUG_MODE=true
